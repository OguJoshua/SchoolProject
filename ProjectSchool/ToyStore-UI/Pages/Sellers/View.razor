@page "/sellers/view/{Id}"
@inject ISellerRepository _repo
@inject NavigationManager _navManager
@inject IToastService _toastService

<h3 class="card-title">View seller Details</h3>
<hr />
<br />
@if (int.Parse(Id) < 1 || string.IsNullOrWhiteSpace(Id))
{
    <ErrorMessage Message="Invalid Selection. Please Try Again" />
}
else if (Model == null)
{
    <LoadingMessage Message="Loading seller Details" />
}
else
{
    _toastService.ShowInfo($"Now Viewing {Model.FirstName} {Model.LastName}", "");
    <div class="col-md-4">
        <table class="table table-responsive">
            <tr>
                <td>First Name</td>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td>Profile</td>
                <td>@Model.Profile</td>
            </tr>
        </table>
        <br />
        @if (Model.Toys == null || Model.Toys.Count < 1)
        {
            <div class="alert alert-dismissible alert-secondary">
                No Toys for this seller
            </div>
        }
        else
        {
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    <h4>seller's Toys</h4>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var toy in Model.Toys)
                    {
                        <li class="list-group-item">@toy.Name - @toy.Price </li>
                    }
                </ul>
            </div>
        }

    </div>
}
<br />


<button @onclick="GoToEdit" class="btn btn-outline-warning">
    <span class="oi oi-pencil"></span>
    Edit seller
</button>
<button @onclick="GoToDelete" class="btn btn-outline-danger">
    <span class="oi oi-circle-x"></span>
    Delete seller
</button>
<button @onclick="BackToList" class="btn btn-outline-secondary">
    <span class="oi oi-media-skip-backward"></span>
    Back To List
</button>

@code {
    [Parameter]
    public string Id { get; set; }

    private Seller Model = new Seller();

    protected override async Task OnInitializedAsync()
    {
        int id = Convert.ToInt32(Id);
        Model = await _repo.Get(Endpoints.SellersEndpoint, id);
    }

    private void BackToList()
    {
        _navManager.NavigateTo("/sellers/");
    }

    private void GoToEdit()
    {
        _navManager.NavigateTo($"/sellers/edit/{Model.Id}");
    }

    private void GoToDelete()
    {
        _navManager.NavigateTo($"/sellers/delete/{Model.Id}");
    }

}