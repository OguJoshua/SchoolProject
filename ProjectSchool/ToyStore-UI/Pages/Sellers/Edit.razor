@page "/sellers/edit/{Id}"
@attribute [Authorize(Roles = "Administrator")]

@inject ISellerRepository _repo
@inject NavigationManager _navManager
@inject IToastService _toastService
<h3 class="card-title">Edit seller</h3>
<hr />
<br />
@if (!isSuccess)
{
    <ErrorMessage Message="Something Went Wrong" />
}

@if (int.Parse(Id) < 1 || string.IsNullOrWhiteSpace(Id))
{
    <ErrorMessage Message="Invalid Selection. Please Try Again" />
}
else if (Model == null)
{
    <LoadingMessage Message="Loading seller For Edit" />
}
else
{
    <EditForm Model="Model" OnValidSubmit="Editseller">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group">
            <label for="firstname">First Name</label>
            <InputText @bind-Value="Model.FirstName" class="form-control" id="firstname" />
        </div>
        <div class="form-group">
            <label for="lastname">Last Name</label>
            <InputText @bind-Value="Model.LastName" class="form-control" id="lastname" />
        </div>
        <div class="form-group">
            <label for="profile">Profile</label>
            <InputTextArea @bind-Value="Model.Profile" class="form-control" id="bio" />
        </div>
        <button class="btn btn-primary" type="submit">
            <span class="oi oi-pencil"></span>
            Submit Changes
        </button>
        <button @onclick="BackToList" class="btn btn-outline-secondary">
            <span class="oi oi-media-skip-backward"></span>
            Back To List
        </button>
    </EditForm>
}


@code {
    [Parameter]
    public string Id { get; set; }

    private Seller Model = new Seller();
    private bool isSuccess = true;
    protected override async Task OnInitializedAsync()
    {
        int id = Convert.ToInt32(Id);
        Model = await _repo.Get(Endpoints.SellersEndpoint, id);
    }

    private async Task Editseller()
    {
        isSuccess = await _repo.Update(Endpoints.SellersEndpoint, Model, Model.Id);
        if (isSuccess)
        {
            _toastService.ShowWarning("seller Updated Successfully", "");
            BackToList();
        }

    }

    private void BackToList()
    {
        _navManager.NavigateTo("/sellers/");
    }
}
